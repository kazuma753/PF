<table class="table">
<thead>
    <tr>
        <th></th>
        <th>いいねの多い投稿</th>
        <th>コメントの多い投稿</th>
        <th></th>
        
    </tr>
</thead>
<div class="container">
  <div class="row">
        <tbody>
        <tr>
        <th></th>
            <th>
                <% all_ranks.each.with_index(1) do |all_rank,i| %>
                    <p><%= i %> 位</p>
                        <%= link_to user_path(all_rank.user) do %>
                            <%= attachment_image_tag all_rank.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %>
                        <% end %>
                        <%= link_to post_path(all_rank) do %> 
                            <%= all_rank.user.name %> さんの投稿
                            <%= attachment_image_tag all_rank, :image, format: 'jpeg', fallback: "no_image.jpg", size: "120x120" %>
                        <% end %>
                        <%= all_rank.body %> |
                    いいね <%= all_rank.favorites.count %>
                <% end %>
            </th>

            <th>
                <% ranks.each.with_index(1) do |rank,i| %>
                    <p><%= i %> 位</p>
                    <%= link_to user_path(rank.user) do %>
                        <%= attachment_image_tag rank.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %>
                    <% end %>
                    <%= link_to post_path(rank) do %> 
                        <%= rank.user.name %>さんの投稿
                        <%= attachment_image_tag rank, :image, format: 'jpeg', fallback: "no_image.jpg", size: "120x120" %>
                    <% end %>
                    <%= rank.body %>
                    <%= rank.comment %> |
                    コメント数 <%= rank.comments.count %>
                <% end %>
            </th>
        </tr>
        </tbody>
    </div>
</div>
</table>