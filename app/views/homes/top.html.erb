<h1>top</h1>
        <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>投稿詳細</th>
                <th>ツイート</th>
                <th></th>
                <th>Opinion</th>
                
            </tr>
        </thead>
        <tbody>
        <% @posts.each do |post| %>
        <tr>
            <td>
                <% if post.user != current_user %>
                    <%= link_to user_path(post.user) do %>
                        <%= attachment_image_tag post.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %>
                        <%= post.user.name %>
                    <% end %>
                <% else %>
                    <%= link_to my_user_path(current_user.id) do %>
                        <%= attachment_image_tag post.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %>
                        <%= post.user.name %>
                    <% end %>
                <% end %>
            </td>

            <td>
                <%= link_to "詳細ページ", post_path(post) %>
            </td>

            <td>
                <%= post.body %>
            </td>

            <td>
                <%= link_to "コメントをする", post_path(post) %>｜
                <i class="fa fa-comment"></i>
                コメント数 <%= @post.comments.count %>
            </td>

            <%= render 'users/likes', post: post %>

            <td>
                <%= link_to "削除", post_path(post), method: :delete, "data-confirm" => "本当に削除しますか？" %>
            </td>
        </tr>
        <% end %>
        </tbody>
        </table>