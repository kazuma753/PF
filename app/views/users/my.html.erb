<h1>マイページ</h1>
<div class="container">
    <div class="row">
    <table class="table">
        <tbody>
            <tr>
                <th>name</th>
                <th><%= @user.name %></th>
            </tr>

            <tr>
                <th>紹介文</th>
                <th><%= @user.introduction %></th>
            </tr>

            <tr>
                <th>メールアドレス</th>
                <th><%= @user.email %></th>
            </tr>
            <%#= @user.encrypted_password %>
            <tr>
                <th>好きな機種</th>
                <th><%= @user.favirite_machine %></th>
            </tr>
        </tbody>
    </table>
    <button type="button" class="btn btn-success"><%= link_to "編集", edit_user_path(@user.id) %></button>
    
            <div class="col-xs-12"> 
<%= render 'posts/list', post: @post %>

            <table class="table">
                    <thead>
                        <tr>
                            <th></th>
                            <th>ツイート</th>
                            <th>Opinion</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                <% @posts.each do |post| %>
                    <tr>
                        <td>
                            <%= attachment_image_tag post.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %>
                        </td>
                        <td>
                            <%= post.body %>
                        </td>
                        <td>
                        </td>
                        <td>
                            <%= link_to "削除", post_path(post), method: :delete, "data-confirm" => "本当に削除しますか？" %>
                        </td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>